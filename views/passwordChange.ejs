<%- include("partials/postPageHeader.ejs") %>

    <form class="form-signin" action="/passwordChange" method="post">
        <span style="font-size: 50px;"><i class="fas fa-unlock-alt"></i></span>
        <h1 class="h3 mb-3 font-weight-normal">Şifremi Değiştir</h1>

        <input type="email" class="form-control" name="username" id="email" placeholder="Kayıtlı mail adresiniz...">
        <hr>
        <label for="oldPassword" class="sr-only">Email addres</label>
        <input name="oldPassword" type="password" id="oldPassword" class="form-control" placeholder="Eski Şifreniz..."
            required autofocus>

        <label for="newPassword" class="sr-only">Password</label>
        <input name="newpassword" type="password" id="newPassword" class="form-control" placeholder="Yeni Şifreniz..."
            required>

        <button class="btn btn-lg btn-success btn-block" type="submit" style="margin: 25px;">Onayla</button>
    </form>

    <script src="scripts/darkMode.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-kQtW33rZJAHjgefvhyyzcGF3C5TFyBQBA13V1RKPf4uH+bwyzQxZ6CmMZHmNBEfJ"
        crossorigin="anonymous"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-rc.2/js/materialize.min.js"></script>
    <!-- MDB -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.6.0/mdb.min.js"></script>
