</div>
<!-- clocks-->

    <form action="/profile" method="post" style="text-align: center; ">
        
        <div class="row">
        <div class="col-lg-6 col-md-12 ">
            <div class="card">
                <h1 class="profil">Profil</h1>
                <h1><i class="fas fa-user fa-4x"></i></h1>
                
                <div class="card-body">
                
                <div class="input-group name mt-3">
                    <span class="input-group-text" id="basic-addon1">İsim</span>
                    <input type="text" class="form-control" name="name">
                </div>
                <div class="input-group name mt-3">
                    <span class="input-group-text" id="basic-addon1">Soyisim</span>
                    <input type="text" class="form-control" name="surname">
                </div>
                <div class="input-group name mt-3">
                    <span class="input-group-text" id="basic-addon1">Email</span>
                    <input type="email" class="form-control" name="email" required placeholder="Mailinizi Giriniz!">
                </div>
                <div class="input-group name mt-3">
                    <span class="input-group-text" id="basic-addon1">Numara</span>
                    <input type="number" class="form-control" name="phoneNumber">
                </div>
                </div>             
            </div>
        </div>
        <div class="col-lg-6 col-md-12">
            <div class="card" style="height: 470px;">
                <div class="textarea" style="margin: 20px 10px; margin-left: 19px; height: 400px;">
                    <h3 style="text-align: center;">Kendinizi Tanıtın</h3>
                    <textarea name="information" id="" cols="63" rows="13"></textarea>
                </div>
                    <input class="btn btn-primary" type="submit"></input>
            </div>
        </div>

    
    
    </form>
</div>

